<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardNewsItemMargins"
    android:layout_marginTop="@dimen/cardNewsItemMargins"
    android:layout_marginRight="@dimen/cardNewsItemMargins"
    android:layout_marginBottom="@dimen/cardNewsItemMargins"
    card_view:cardCornerRadius="@dimen/cardNewsItemCornerRadius"
    card_view:cardElevation="@dimen/cardNewsItemElevation"
    card_view:contentPadding="@dimen/cardNewsItemPadding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newsItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/titleTextSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/newsItemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/contentTextSize"
            android:textStyle="italic" />
        <WebView
            android:id="@+id/newsItemGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="WebViewLayout">

        </WebView>
    </LinearLayout>
</android.support.v7.widget.CardView>